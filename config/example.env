# Strava API Configuration
STRAVA_CLIENT_ID=your_client_id_here
STRAVA_CLIENT_SECRET=your_client_secret_here
STRAVA_REDIRECT_URI=http://localhost:8000/auth/callback

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/crit_lines
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-make-it-long-and-random

# Video Processing Settings
MAX_VIDEO_SIZE_MB=500
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov,mkv,webm
VIDEO_TEMP_DIR=temp/videos
VIDEO_OUTPUT_DIR=outputs/processed

# Computer Vision Settings
CV_MODEL_PATH=models/yolo/best.pt
CV_CONFIDENCE_THRESHOLD=0.5
CV_TRACK_BUFFER_SIZE=30

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Settings
API_HOST=localhost
API_PORT=8000
API_WORKERS=4

# File Storage
UPLOAD_DIR=uploads
STORAGE_MAX_SIZE_GB=10

# Analysis Settings
RACING_LINE_SMOOTHING_FACTOR=0.1
TELEMETRY_SYNC_TOLERANCE_SEC=2.0
DEFAULT_FPS=30

# Development Settings
DEV_MODE=false
PROFILING_ENABLED=false